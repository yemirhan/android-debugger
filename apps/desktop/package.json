{
  "name": "@android-debugger/desktop",
  "version": "1.0.0",
  "description": "Android Debugger Desktop Application",
  "author": "Android Debugger Team",
  "private": true,
  "main": "./out/main/index.js",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "package": "electron-builder",
    "clean": "rm -rf dist out",
    "copy-adb": "mkdir -p resources/platform-tools && cp ~/Library/Android/sdk/platform-tools/adb resources/platform-tools/ && chmod +x resources/platform-tools/adb"
  },
  "dependencies": {
    "@android-debugger/shared": "workspace:*",
    "recharts": "^2.15.0",
    "ws": "^8.18.0",
    "uuid": "^11.0.5"
  },
  "build": {
    "appId": "com.android-debugger.desktop",
    "productName": "Android Debugger",
    "directories": {
      "output": "dist"
    },
    "files": [
      "out/**/*"
    ],
    "extraResources": [
      {
        "from": "resources/platform-tools",
        "to": "platform-tools"
      }
    ],
    "npmRebuild": false,
    "mac": {
      "target": ["dmg"],
      "category": "public.app-category.developer-tools"
    }
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.0.0",
    "@types/node": "^22.10.5",
    "@types/react": "^19.0.6",
    "@types/react-dom": "^19.0.3",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.5.13",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "electron": "34.0.1",
    "electron-builder": "^25.1.8",
    "electron-vite": "^3.0.0",
    "postcss": "^8.5.1",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "tailwindcss": "^4.0.0",
    "typescript": "^5.7.2",
    "vite": "^6.0.7"
  }
}
